{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": "./",
    "target": "ES6",
    "lib": [],
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
